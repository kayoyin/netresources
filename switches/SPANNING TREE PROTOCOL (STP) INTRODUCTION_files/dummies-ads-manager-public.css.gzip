.du-ad-unit{

    margin-bottom: 8px;
    margin-top: 8px;
}
.du-ad-region .x2-right{
    margin-right: 0 !important;
}

@media (max-width: 768px ) {


    .article_page_top_ad .du-ad-unit{

        margin: 0 !important;
    }
}

@media (max-width: 360px ) {

    .article-page article .article-slideshow .slide .slide-content {
        padding: 0 0 !important;
    }

    #article_page_content_ad .du-ad-unit{

        /*margin: 0 0 0 -40px !important*/;
    }

    #article_page_top_ad .du-ad-unit{
        margin: 0 !important;
    }

    #article_page_content_bottom_ad .du-ad-unit {
        margin: 0 10% 0 10% !important;
    }
}